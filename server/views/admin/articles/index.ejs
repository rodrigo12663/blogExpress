<%- include ('../../partials/header.ejs');%>
<%- include ('../../partials/navbar.ejs');%>
<div class="container py-5">
 
    <h2>Categorias</h2>
    <a href="/admin/categories/new" class="btn btn-success">Criar nova categoria</a>
    <br><br>
    <table class="table table-bordered">
        
        <thread>
            <tr>
                <th>ID</th>
                <th>Titúlo</th>
                <th>Slug</th>
                <th>Ações</th>

            </tr>
        </thread>
        <tbody>
            <% categories.forEach(category =>{%>
                <tr>
                    <th><%=category.id %></th>
                    <th><%=category.title %></th>
                    <th><%=category.slug %></th>
                    <th><a href="/admin/categories/edit/<%=category.id %>" class="btn btn-warning">atualizar</a></th>
                    <form action="/admin/categories/delete" method="POST" onsubmit="confirmarDelecao(event,this)">
                        <th><button class="btn btn-danger">Deletar</button></th>
                        <input name="id" type="hidden"value="<%=category.id %>">
                    </form>
    
                </tr>
            <%})  %>
        </tbody>
    </table>
</div>

<%- include ('../../partials/footer.ejs');%>
<script>
    function confirmarDelecao(event,form){
        event.preventDefault();
        var decision= confirm("tem certeza que quer deletar");
        if(decision){
            form.submit();
        }
    }
</script>